@model IEnumerable<JamesThewDOTcom.Models.FAQ>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<br />
<br />
<br />

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Questions)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Answers)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Questions)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Answers)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.FaqID }) |
            @Html.ActionLink("Details", "Details", new { id=item.FaqID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.FaqID })
        </td>
    </tr>
}

</table>

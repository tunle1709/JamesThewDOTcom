@model List<JamesThewDOTcom.Models.FAQ>


@{
    ViewBag.Title = "Frequently Asked Questions";


    if (Session["UserName"] == null)
    {
        // Khi chưa Login thì sử dụng Layout này
        Layout = "~/Views/Shared/_Layout_Dashboard.cshtml";
    }
    else
    {
        // Khi đã Login thì sử dụng Layout này
        Layout = "~/Views/Shared/_Layout_Dashboard.cshtml";
    }
}

<main>
    <br />
    <section>
        <div class="container mt-5">
            <h1 class="mb-4 text-danger font-weight-bold">Frequently asked questions</h1>

            <div class="accordion" id="faqAccordion">
                @foreach (var faq in Model)
                {
                    <div class="card">
                        <div class="card-header" id="heading@(faq.FaqID)">
                            <h2 class="mb-0">
                                <button class="btn btn-link text-danger font-weight-bold text-decoration-none" type="button" data-toggle="collapse" data-target="#collapse@(faq.FaqID)" aria-expanded="true" aria-controls="collapse@(faq.FaqID)">
                                    @faq.Questions
                                </button>
                            </h2>
                        </div>
                        <div id="collapse@(faq.FaqID)" class="collapse" aria-labelledby="heading@(faq.FaqID)" data-parent="#faqAccordion">
                            <div class="card-body">
                                @faq.Answers
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    </section>
</main>


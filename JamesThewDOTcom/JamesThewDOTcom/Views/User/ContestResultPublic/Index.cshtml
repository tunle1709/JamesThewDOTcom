

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="container">
    <h1 class="mt-4">Determining Winners</h1>

    <!-- Form để nhập thông tin người chiến thắng -->
    <form>
        <div class="form-group">
            <label for="winnerName">Winner Name:</label>
            <input type="text" class="form-control" id="winnerName" placeholder="Determining Winners">
        </div>

        <!-- Nút để xác nhận người chiến thắng -->
        <button type="button" class="btn btn-primary" onclick="displayWinner()">Winner Confirmation</button>
    </form>

    <!-- Hiển thị kết quả người chiến thắng -->
    <div class="mt-4" id="winnerResult"></div>
</div>

<!-- Sử dụng Bootstrap JS và Popper.js -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
@*<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.8/dist/umd/popper.min.js"></script>*@
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    // Hàm để hiển thị người chiến thắng
    function displayWinner() {
        // Lấy giá trị từ ô nhập liệu
        var winnerName = document.getElementById("winnerName").value;

        // Hiển thị kết quả
        document.getElementById("winnerResult").innerHTML = "<h3>Winner:</h3><p>" + winnerName + "</p>";
    }
</script>

